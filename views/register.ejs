                    <li class="nav-item"><a class="nav-link" href="https://condologix.com/support/">SUPORTE</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Pills content -->
    <div class="tab-content text-center w-50 mx-auto mt-5">
        <div class="tab-pane fade show active" id="pills-login" role="tabpanel" aria-labelledby="tab-login">
            <form id="contactForm" method="get">
                <div class="container">
                    <form id="imageForm" action="" method="post" enctype="multipart/form-data">
                        <div class="mb-3">
                            <input type="file" class="form-control" id="imageInput" name="imagem" accept="image/*" capture="camera">
                        </div>
                        <div class="text-center">
                            <button type="button" id="saveButton" class="btn btn-primary btn-xl-2 mt-3">Enviar Imagem</button>
                        </div>
                    </form>
                </div>
                <p class="text-center mb-4 mt-4 text-uppercase">ou</p>
                <p class="text-center mb-5 text-uppercase">Cadastre Manualmente:</p>
                <div class="form-floating mb-3 mx-auto">
                    <input class="form-control" id="residentName" type="text" placeholder="Nome completo" data-sb-validations="required" />
                    <label for="residentName">Nome completo</label>
                </div>
                <div class="form-floating mb-3 mx-auto">
                    <select class="form-select" id="terminalBlock" data-sb-validations="required">
                        <option value="">Selecione o Bloco</option>
                    </select>
                    <label for="terminalBlock">Bloco</label>
                </div>
                <div class="form-floating mb-3 mx-auto">
                    <select class="form-select" id="terminalNumber" data-sb-validations="required">
                        <option value="">Selecione o Apartamento</option>
                    </select>
                    <label for="terminalNumber">Apartamento</label>
                </div>
                <div class="d-flex justify-content-center my-5">
                    <button class="btn btn-primary btn-xl" id="registerButton" type="submit">Cadastrar</button>
                </div>                
            </form>
        </div>
    </div>

    <!-- Footer-->
    <footer class="py-5">
